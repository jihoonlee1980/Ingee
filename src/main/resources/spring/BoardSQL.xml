<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com">
	<insert id="insertBoard" parameterType="com.menu.model.BoardDTO">
		insert into board values(0, #{writer}, #{b_category}, #{s_category}, #{subject}, #{subject}, #{content}, 0, 0, #{origin_filename}, #{saved_filename}, now())
	</insert>
	<select id="boardCount" parameterType="HashMap" resultType="int">
		select count(*) from board where b_category = #{b_category} and s_category = #{s_category}
	</select>	
	<select id="boardList" resultType="com.menu.model.BoardDTO" parameterType="HashMap">
		select * from board where b_category = #{b_category} and s_category = #{s_category} order by writedate desc limit #{start} , #{perPage}
	</select>
</mapper>